{
  "info": {
    "name": "IPO Management Platform API",
    "description": "Complete API collection for IPO Management Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/auth/me"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/auth/logout"
          }
        }
      ]
    },
    {
      "name": "IPOs",
      "item": [
        {
          "name": "Get All IPOs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/ipos"
          }
        },
        {
          "name": "Get Active IPOs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/ipos/active"
          }
        },
        {
          "name": "Get Upcoming IPOs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/ipos/upcoming"
          }
        },
        {
          "name": "Get IPO by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/ipos/:id"
          }
        },
        {
          "name": "Create IPO (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/ipos",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Tech Corp\",\n  \"symbol\": \"TECH\",\n  \"priceRange\": {\"min\": 100, \"max\": 120},\n  \"lotSize\": 100,\n  \"openDate\": \"2024-01-01\",\n  \"closeDate\": \"2024-01-07\",\n  \"totalShares\": 1000000,\n  \"minInvestment\": 10000,\n  \"status\": \"active\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Create Application",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/applications",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ipoId\": \"ipo_id_here\",\n  \"quantity\": 10,\n  \"bidPrice\": 110\n}"
            }
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/applications/my-applications"
          }
        }
      ]
    },
    {
      "name": "Market Data",
      "item": [
        {
          "name": "Get Stock Quote",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/market-data/quote/AAPL"
          }
        },
        {
          "name": "Get Market Status",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/market-data/market-status"
          }
        }
      ]
    }
  ]
}
